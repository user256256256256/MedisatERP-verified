@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper">
    <!-- Sidebar Section -->
    <nav id="sidebar" class="sidebar js-sidebar">
        <div class="sidebar-content js-simplebar">

            <!-- Custom template -- See ~wwwroot/js/CustomElements.js -->
            <!-- Sidebar Brand (Logo) -->
            <sidebar-brand></sidebar-brand>

            <!-- Sidebar Navigation Menu -->
            <ul class="sidebar-nav">

                <!-- Section Header: MEDISAT ERP -->
                <li class="sidebar-header">
                    MEDISAT ERP
                </li>

                <!-- Sidebar Item: Dashboard -->
                <li class="sidebar-item @((Context.Request.Path.Value.Contains("NutritionSystem")) ? "active" : "")">
                    <a class="sidebar-link" href="NutritionSystem">
                        <i class="align-middle" data-feather="sliders"></i>
                        <span class="align-middle">Dashboard</span>
                    </a>
                </li>

                <!-- Sidebar Item: Patients -->
                <li class="sidebar-item @((Context.Request.Path.Value.Contains("Patients")) ? "active" : "")">
                    <a class="sidebar-link" href="Patients">
                        <i class="align-middle" data-feather="users"></i>
                        <span class="align-middle">Patients</span>
                    </a>
                </li>

                <!-- Sidebar Item: Allergies -->
                <li class="sidebar-item @((Context.Request.Path.Value.Contains("Allergies")) ? "active" : "")">
                    <a class="sidebar-link" href="Allergies">
                        <i class="align-middle" data-feather="alert-octagon"></i>
                        <span class="align-middle">Allergies</span>
                    </a>
                </li>

                <!-- Sidebar Item: Nutrition Profiles -->
                <li class="sidebar-item @((Context.Request.Path.Value.Contains("NutritionProfiles")) ? "active" : "")">
                    <a class="sidebar-link" href="NutritionProfiles">
                        <i class="align-middle" data-feather="heart"></i>
                        <span class="align-middle">Nutrition Profiles</span>
                    </a>
                </li>

                <!-- Sidebar Item: Medical Conditions -->
                <li class="sidebar-item @((Context.Request.Path.Value.Contains("MedicalConditions")) ? "active" : "")">
                    <a class="sidebar-link" href="MedicalConditions">
                        <i class="align-middle" data-feather="activity"></i>
                        <span class="align-middle">Medical Conditions</span>
                    </a>
                </li>

                <!-- Sidebar Item: Diet Plans -->
                <li class="sidebar-item @((Context.Request.Path.Value.Contains("DietPlans")) ? "active" : "")">
                    <a class="sidebar-link" href="DietPlans">
                        <i class="align-middle" data-feather="clipboard"></i>
                        <span class="align-middle">Diet Plans</span>
                    </a>
                </li>

                <!-- Sidebar Item: Meal Plans -->
                <li class="sidebar-item @((Context.Request.Path.Value.Contains("MealPlans")) ? "active" : "")">
                    <a class="sidebar-link" href="MealPlans">
                        <i class="align-middle" data-feather="grid"></i>
                        <span class="align-middle">Meal Plans</span>
                    </a>
                </li>

                <!-- Sidebar Item: Food Database -->
                <li class="sidebar-item @((Context.Request.Path.Value.Contains("FoodDatabase")) ? "active" : "")">
                    <a class="sidebar-link" href="FoodDatabase">
                        <i class="align-middle" data-feather="database"></i>
                        <span class="align-middle">Food Database</span>
                    </a>
                </li>

                <!-- Sidebar Item: Meal Logs -->
                <li class="sidebar-item @((Context.Request.Path.Value.Contains("MealLogs")) ? "active" : "")">
                    <a class="sidebar-link" href="MealLogs">
                        <i class="align-middle" data-feather="book-open"></i>
                        <span class="align-middle">Meal Logs</span>
                    </a>
                </li>

                <!-- Sidebar Item: Reports Conducted -->
                <li class="sidebar-item @((Context.Request.Path.Value.Contains("Reports")) ? "active" : "")">
                    <a class="sidebar-link" href="Reports">
                        <i class="align-middle" data-feather="file-text"></i>
                        <span class="align-middle">Reports Conducted</span>
                    </a>
                </li>

                <!-- Section Header: SECURITY CENTRE -->
                <li class="sidebar-header">
                    SECURITY CENTRE
                </li>

            </ul>
        </div>
    </nav>


    <!-- Main Content Section -->
    <div class="main">

        <!-- Navbar Section -->
        <nav class="navbar navbar-expand navbar-light navbar-bg">
            <!-- Sidebar Toggle Button -->
            <a class="sidebar-toggle js-sidebar-toggle">
                <i class="hamburger align-self-center"></i>
            </a>

            <div class="navbar-collapse collapse">
                <ul class="navbar-nav navbar-align">

                    <!-- Notification Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-icon dropdown-toggle" href="#" id="alertsDropdown" data-bs-toggle="dropdown">
                            <div class="position-relative">
                                <i class="align-middle" data-feather="bell"></i>
                                <span class="indicator">4</span> <!-- Notification Count -->
                            </div>
                        </a>
                        <div class="dropdown-menu dropdown-menu-lg dropdown-menu-end py-0" aria-labelledby="alertsDropdown">
                            <div class="dropdown-menu-header">
                                4 New Notifications
                            </div>
                            <div class="list-group">
                                <!-- Example Notification: Update Completed -->
                                <a href="#" class="list-group-item">
                                    <div class="row g-0 align-items-center">
                                        <div class="col-2">
                                            <i class="text-danger" data-feather="alert-circle"></i>
                                        </div>
                                        <div class="col-10">
                                            <div class="text-dark">Update completed</div>
                                            <div class="text-muted small mt-1">Restart server 12 to complete the update.</div>
                                            <div class="text-muted small mt-1">30m ago</div>
                                        </div>
                                    </div>
                                </a>

                                <!-- Example Notification: Login from IP -->
                                <a href="#" class="list-group-item">
                                    <div class="row g-0 align-items-center">
                                        <div class="col-2">
                                            <i class="text-primary" data-feather="home"></i>
                                        </div>
                                        <div class="col-10">
                                            <div class="text-dark">Login from 192.186.1.8</div>
                                            <div class="text-muted small mt-1">5h ago</div>
                                        </div>
                                    </div>
                                </a>

                            </div>
                            <div class="dropdown-menu-footer">
                                <a href="#" class="text-muted">Show all notifications</a>
                            </div>
                        </div>
                    </li>

                    <!-- User Account Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-icon dropdown-toggle d-inline-block d-sm-none" href="#" data-bs-toggle="dropdown">
                            <i class="align-middle" data-feather="settings"></i>
                        </a>

                        <a class="nav-link dropdown-toggle" href="UserProfile" data-bs-toggle="dropdown">
                            <!-- User Avatar and Name -->
                            <img src="~/img/userProfileImages/team-1.jpg" class="avatar img-fluid rounded me-1" alt="Profile-img" />
                            <span>Nadia Malker</span> <!-- Full name of the logged-in user -->
                        </a>


                        <div class="dropdown-menu dropdown-menu-end">
                            <a class="dropdown-item" href="Profile"><i class="align-middle me-1" data-feather="user"></i> Profile</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#"><i class="align-middle me-1" data-feather="help-circle"></i> Help Center</a>
                            <div class="dropdown-divider"></div>
                            <!-- Log out option -->
                            <a class="dropdown-item" href="javascript:;" onclick="Logout()"><i class="align-middle me-1" data-feather="log-in"></i> Log out</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content Area -->
        <main class="content">
            <div class="container-fluid p-0">
                <!-- Render Body Content -->
                @RenderBody() <!-- This is where the content of the current view will be injected -->
            </div>
        </main>

        <!-- Footer Section -->
        <footer class="footer">
            <div class="container-fluid">
                <div class="row text-muted">
                    <div class="col-12 text-start">
                        <p class="mb-0" style="color: #565e64; ">
                            <script>document.write(new Date().getFullYear() + ' MEDISAT | By Eurosat ' );</script>
                        </p>
                    </div>
                </div>
            </div>
        </footer>
    </div>

</div>
