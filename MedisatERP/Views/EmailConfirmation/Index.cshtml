@{
    ViewData["Title"] = "Email Confirmation";
}

<div class="container mt-5">
    <!-- Card with confirmation message -->
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white text-center">
            <h4>Email Confirmed!</h4>
        </div>
        <div class="card-body text-center">
            <p class="lead">
                Thank you for confirming your email. You can now
                <a href="/" class="btn btn-primary btn-lg" id="loginLinkButton" role="button" aria-label="Log in to your account">log in</a>
                to your account.
            </p>
        </div>
    </div>

    <!-- Success message as alert -->
    <div class="alert alert-success mt-4" role="alert" id="confirmationAlert">
        Your email has been successfully confirmed. You are now ready to access your account.
    </div>
</div>

<script>
    // Function to trigger the login link click
    function triggerLoginLink() {
        const loginLink = document.getElementById('loginLinkButton');
        loginLink.click();
    }

    // Add an event listener for the Enter key to trigger the login link click globally
    document.addEventListener('keydown', function (event) {
        if (event.key === 'Enter') {
            event.preventDefault(); // Prevent the default behavior
            triggerLoginLink(); // Trigger the login link click
        }
    });

    // Automatically focus the login button on page load for better accessibility
    window.onload = function () {
        const loginLink = document.getElementById('loginLinkButton');
        loginLink.setAttribute('tabindex', '0'); // Ensure it's focusable even if it's not naturally focusable
        loginLink.focus();
    };
</script>
