@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <!-- Card with error message -->
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white text-center">
            <h4>An Error Occured!</h4>
        </div>
        <div class="card-body text-center">
            <p class="lead">@ViewData["ErrorMessage"]</p>
            <a href="/" class="btn btn-primary btn-lg">Return Home</a>
        </div>
    </div>

    <!-- Error message as alert -->
    <div class="alert alert-danger mt-4" role="alert">
        An error has occurred. Please try again later or contact support if the problem persists.
    </div>
</div>
